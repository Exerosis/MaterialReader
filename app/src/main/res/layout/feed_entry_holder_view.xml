<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/feed_entry_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/feed_container_header_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/feed_entry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                tools:text="Trump Broke Something" />

            <TextView
                android:id="@+id/feed_entry_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                tools:text="Trump was said to have broken something." />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center">

            <Button
                android:id="@+id/feed_entry_share"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_bookmark" />

            <Button
                android:id="@+id/feed_entry_like"
                style="@android:style/Widget.Material.Light.Button.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/feed_entry_share"
                android:background="@drawable/ic_share"
                android:paddingEnd="8dp"
                android:paddingStart="8dp" />

            <Button
                android:id="@+id/feed_entry_expand"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_hide"
                android:paddingEnd="8dp"
                android:paddingStart="8dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>