<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/feed_entry_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/feed_container_header_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feed_entry_source_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    tools:text="Lifehacker" />

                <TextView
                    android:id="@+id/feed_entry_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    tools:text="March 13, 2017" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/feed_entry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                tools:text="Trump Broke Something" />

            <TextView
                android:id="@+id/feed_entry_description_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text"
                tools:text="Blah blah blah blah blah blah" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/feed_entry_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:el_duration="500"
                app:el_expanded="false"
                app:el_parallax="1">

                <TextView
                    android:id="@+id/feed_entry_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" />

            </net.cachapa.expandablelayout.ExpandableLayout>

        </LinearLayout>


        <!--        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="24dp">

                    <TextView
                        android:id="@+id/feed_entry_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/primary_text"
                        android:textSize="24sp"
                        tools:text="Trump Broke Something" />

                    <TextView
                        android:id="@+id/feed_entry_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        tools:text="Jonathan Zarnstorff, Mar 13, 2017" />

                </LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <Button
                android:id="@+id/feed_entry_share"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_bookmark" />

            <Button
                android:id="@+id/feed_entry_like"
                style="@android:style/Widget.Material.Light.Button.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/feed_entry_share"
                android:background="@drawable/ic_share"
                android:paddingEnd="8dp"
                android:paddingStart="8dp" />

            <ToggleButton
                android:id="@+id/feed_entry_toggle"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_toggle"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>